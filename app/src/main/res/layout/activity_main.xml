<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="798dp"
            android:layout_height="1278dp" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/infoView"
                    android:text="@string/try_to_guess"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/numberField"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:onClick="onControlClick"
                    android:text="@string/input_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/controlButton"
            />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>